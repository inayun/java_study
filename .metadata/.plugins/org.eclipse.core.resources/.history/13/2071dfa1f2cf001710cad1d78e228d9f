package ex_operator;

public class Ex6_Operator {

	public static void main(String[] args) {

		/* 삼항 연산자(조건 연산자)
		 * 하나의 조건을 정의하고 그 조건이 참일때와 거짓일때를 
		 * 구별 하여 다른 결과를 얻을 수 있게 해주는 연산자
		 */
		
		int a = 10;
		int b = 15;
		boolean result = ++a >= b ? true : false;
		System.out.println(result);
	
	}

}
