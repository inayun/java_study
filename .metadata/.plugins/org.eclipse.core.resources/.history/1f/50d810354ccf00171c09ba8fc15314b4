package ex_value_type;

public class Ex1_valueType {

	public static void main(String[] args) {

	/* 기본 자료형
	 * 
	 * 논리형 : boolean - 1bit
	 * 문자형 : char - 2byte
	 * 정수형 : byte - 1byte	 -128 ~ 127
	 * 		 short - 2byte 	 -32768 ~ 32768
	 * 		 int - 4byte 	 약 -21억 ~ 21억
	 *		 long - 8byte	 -900경 ~ 900경
	 * 실수형 : float - 4byte
	 * 		 double - 8byte
	 */

	//변수 : 값을 저장하기 위한 공간  (변수명은 무조건 소문자로!!!)
	//자료형 변수명; (선언)
	//변수명 = 값; (대입)
	//자료형 변수명 = 값; (초기화)
		
	int score; //선언
	score = 100; //대입
	int sco = 150; //초기화
	//int sco = 150; (같은 이름의 변수를 중복해서 선언할 수 없음!)
	
	//변수 선언 규칙
	//숫자를 먼저 쓸 수 없음
	//_를 제외한 특수문자를 사용할 수 없음
	//첫글자는 소문자로
	//한글 사용 금지
	//
	
	}

}
